{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"lib": ["esnext", "es2015", "dom", "dom.iterable"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNEXT"
	},
	"exclude": ["node_modules", "dist", "coverage", ".eslintrc.js"]
}
