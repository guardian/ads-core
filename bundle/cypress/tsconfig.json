{
	"compilerOptions": {
		"esModuleInterop": true,
		"lib": ["ES2019", "DOM"],
		"module": "commonjs",
		"noEmit": true,
		// https://github.com/cypress-io/cypress/issues/9298
		"target": "ES2019",
		"types": ["node", "cypress"],
		"skipLibCheck": true,
		"strict": true,
		"paths": {
			"common/*": ["../src/projects/common/*"],
			"lib/*": ["../src/lib/*"],
			"projects/*": ["../src/projects/*"],
			"types/*": ["../src/types/*"]
		}
	},
	"include": ["./**/*.ts", "../src/types/global.ts"]
}
