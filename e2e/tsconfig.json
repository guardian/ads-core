{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "noEmit": true,
    // https://github.com/cypress-io/cypress/issues/9298
    "target": "ES2019",
    "types": ["node", "cypress"],
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "common/*": ["../bundle/src/projects/common/*"],
      "lib/*": ["../bundle/src/lib/*"],
      "projects/*": ["../bundle/src/projects/*"],
      "types/*": ["../bundle/src/types/*"]
    }
  },
  "include": ["./**/*.ts", "../bundle/src/types/global.ts"]
}
