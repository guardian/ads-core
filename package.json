{
  "name": "@guardian/commercial-core",
  "version": "0.0.0-this-never-updates-in-source-code-refer-to-git-tags",
  "description": "Guardian advertising business logic",
  "homepage": "https://github.com/guardian/commercial-core#readme",
  "bugs": {
    "url": "https://github.com/guardian/commercial-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/commercial-core.git"
  },
  "license": "Apache-2.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm-run-all clean --parallel compile:*",
    "clean": "rm -rf dist",
    "commit": "cz",
    "compile:common": "tsc --project ./tsconfig.build.json --outDir ./dist/cjs --module CommonJS",
    "compile:esm": "tsc --project ./tsconfig.build.json --outDir ./dist/esm",
    "lint": "eslint .",
    "precommit:lint": "lint-staged",
    "prepush:test": "jest --verbose --runInBand --onlyChanged",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "validate": "npm-run-all tsc lint test build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all precommit:*",
      "pre-push": "npm-run-all prepush:*"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js|*.ts": "eslint --fix"
  },
  "prettier": "@guardian/prettier",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@guardian/eslint-config-typescript": "^0.4.2",
    "@guardian/prettier": "^0.4.2",
    "@octokit/core": "^3.2.4",
    "@semantic-release/github": "7.2.0",
    "@types/doubleclick-gpt": "^2019041801.0.4",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
