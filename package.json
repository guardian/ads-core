{
	"name": "@guardian/commercial",
	"version": "0.0.0-this-never-updates-in-source-code-refer-to-git-tags",
	"description": "Guardian advertising business logic",
	"homepage": "https://github.com/guardian/commercial-core#readme",
	"bugs": {
		"url": "https://github.com/guardian/commercial-core/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/guardian/commercial-core.git"
	},
	"scripts": {
		"precommit:lint": "lint-staged",
		"prepush:test": "yarn workspace @guardian/commercial-bundle jest --verbose --runInBand --onlyChanged",
		"prepare": "husky install"
	},
	"workspaces": [
		"bundle",
		"e2e"
	],
	"private": true,
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"bundle/**/*.(js|ts)": [
			"yarn workspace @guardian/commercial-bundle eslint --fix",
			"yarn workspace @guardian/commercial-bundle prettier:fix"
		]
	},
	"resolutions": {
		"typescript": "~4.9.5"
	},
	"devDependencies": {
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0"
	}
}
