{
  "name": "@guardian/commercial-core",
  "version": "0.0.0-this-never-updates-in-source-code-refer-to-git-tags",
  "description": "Guardian advertising business logic",
  "homepage": "https://github.com/guardian/commercial-core#readme",
  "bugs": {
    "url": "https://github.com/guardian/commercial-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/commercial-core.git"
  },
  "license": "Apache-2.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm-run-all clean --parallel compile:*",
    "clean": "rm -rf dist",
    "commit": "cz",
    "compile:common": "tsc --project ./tsconfig.build.json --outDir ./dist/cjs --module CommonJS",
    "compile:esm": "tsc --project ./tsconfig.build.json --outDir ./dist/esm",
    "lint": "eslint .",
    "precommit:lint": "lint-staged",
    "prepush:test": "jest --verbose --runInBand --onlyChanged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci",
    "tsc": "tsc --noEmit",
    "validate": "npm-run-all tsc lint test build",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js|*.ts": "eslint --fix"
  },
  "prettier": "@guardian/prettier",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.0",
    "@guardian/ab-core": "^2.0.0",
    "@guardian/consent-management-platform": "^10.6.0",
    "@guardian/eslint-config-typescript": "^1.0.0",
    "@guardian/libs": "^7.1.3",
    "@guardian/prettier": "^2.1.1",
    "@octokit/core": "^4.0.5",
    "@semantic-release/github": "^8.0.2",
    "@types/google.analytics": "^0.0.42",
    "@types/googletag": "^2.0.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "commitizen": "^4.2.4",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^27.4.1",
    "lint-staged": "^13.0.3",
    "mockdate": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.0.7",
    "type-fest": "^2.8.0",
    "typescript": "^4.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@guardian/ab-core": "^2.0.0",
    "@guardian/libs": "^10.0.0"
  }
}
