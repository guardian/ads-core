{
	"name": "@guardian/commercial-core",
	"version": "0.2.0",
	"description": "Guardian advertising business logic",
	"homepage": "https://github.com/guardian/commercial-core#readme",
	"bugs": {
		"url": "https://github.com/guardian/commercial-core/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/guardian/commercial-core.git"
	},
	"license": "Apache-2.0",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"scripts": {
		"build": "npm-run-all clean --parallel compile:*",
		"clean": "rm -rf dist",
		"compile:common": "tsc --project ./tsconfig.build.json --outDir ./dist/cjs --module CommonJS",
		"compile:esm": "tsc --project ./tsconfig.build.json --outDir ./dist/esm",
		"lint": "eslint .",
		"prepush:lint": "lint-staged",
		"prepush:test": "jest --verbose --runInBand --onlyChanged",
		"test": "jest --coverage",
		"tsc": "tsc --noEmit",
		"validate": "npm-run-all lint test compile"
	},
	"husky": {
		"hooks": {
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"pre-push": "npm-run-all prepush:*",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS HUSKY_USE_YARN"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*": "eslint --fix"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.2",
		"@commitlint/config-conventional": "^9.1.2",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@types/jest": "^26.0.13",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^7.8.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jest": "^24.0.0",
		"eslint-plugin-prettier": "^3.1.4",
		"git-cz": "^4.7.1",
		"husky": "^4.3.0",
		"jest": "^26.4.2",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.1",
		"semantic-release": "^17.1.1",
		"ts-jest": "^26.3.0",
		"typescript": "^4.0.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
