{
  "root": true,
  "env": {
    "jest": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["@guardian/eslint-config"],
  "plugins": ["jest"],
  "globals": { "googletag": "readonly", "jsdom": "readonly" },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".svg",
        ".html"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },

  "rules": {
    // Temporary (they better be!) rule to flag the 'bad', legacy imports from
    // frontend that get this working. At some point this codebase _will_ be
    // detached from frontend entirely, and then it will make it's own decisions
    // about what it uses.
    "no-restricted-imports": [
      "warn",
      {
        "paths": ["bonzo", "bean", "qwery", "fastdom"],
        "patterns": ["@guardian/frontend/*", "lodash/*"]
      }
    ]
  },
  "ignorePatterns": ["dist", "coverage", "src/__vendor"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["@guardian/eslint-config-typescript"]
    }
  ]
}
