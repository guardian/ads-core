{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src", "src/@frontend.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
